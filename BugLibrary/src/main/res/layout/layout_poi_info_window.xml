<?xml version="1.0" encoding="utf-8"?>
<com.mapbox.mapboxsdk.annotations.BubbleLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:mapbox_bl_arrowDirection="bottom"
    app:mapbox_bl_arrowHeight="8dp"
    app:mapbox_bl_arrowPosition="16dp"
    app:mapbox_bl_arrowWidth="20dp"
    app:mapbox_bl_bubbleColor="@color/white"
    app:mapbox_bl_cornersRadius="16dp"
    app:mapbox_bl_strokeColor="@color/info_shadow"
    app:mapbox_bl_strokeWidth="0.75dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_poi_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dubai_medium"
            android:maxWidth="130dp"
            android:paddingEnd="4dp"
            android:text="@string/arrived_at"
            android:textColor="@color/black" />


        <ImageButton
            android:id="@+id/button_navigate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:padding="4dp"
            android:src="@drawable/ic_direction"
            android:tint="@color/purple_500" />


        <ImageButton
            android:id="@+id/button_poi_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:padding="4dp"
            android:src="@drawable/ic_about_us_icon"
            android:tint="@color/purple_500" />
    </LinearLayout>

</com.mapbox.mapboxsdk.annotations.BubbleLayout>