<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.onbording.OnBoardingPagerFragment">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_on_boarding_bg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/img_onboarding_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/boarding_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/img_onboarding_1"
        app:layout_constraintBottom_toBottomOf="@id/img_on_boarding_bg"
        app:layout_constraintEnd_toEndOf="@id/img_on_boarding_bg"
        app:layout_constraintStart_toStartOf="@id/img_on_boarding_bg"
        app:layout_constraintTop_toTopOf="@id/img_on_boarding_bg" />

    <TextView
        android:id="@+id/boarding_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="33dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="27dp"
        android:fontFamily="@font/dubai_bold"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_on_boarding_bg" />

    <TextView
        android:id="@+id/boarding_title_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="33dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="36dp"
        android:fontFamily="@font/dubai_regular"
        android:gravity="center"
        android:textColor="#80000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/boarding_title" />

</androidx.constraintlayout.widget.ConstraintLayout>