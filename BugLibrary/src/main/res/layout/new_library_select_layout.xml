<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/library_we_use"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="32dp"

        android:drawablePadding="10dp"
        android:fontFamily="@font/dubai_regular"
        android:text="@string/library_we_use"
        android:textColor="#D9000000"
        android:textSize="14sp"
        app:drawableStartCompat="@drawable/ic_new_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/banner_img" />

    <include
        android:id="@+id/about_us_inside_layout"
        layout="@layout/new_policies_layout" />
</LinearLayout>