<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AlFahidiHistoricalWayfinding" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/Theme.AlFahidiHistoricalWayfinding.ActionMode</item>
    </style>

    <style name="HeaderTextAppearance">
        <item name="android:textColor">#5F2E7F</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/dubai_bold</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="Theme.AlFahidiHistoricalWayfinding.Splash">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>

    </style>


    <!--tab theme-->
    <style name="Widget.App.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TabLayout</item>
        <item name="tabTextAppearance">@style/TextAppearance.App.Button</item>
    </style>

    <style name="TextAppearance.App.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/dubai_bold</item>

        <item name="android:fontFamily">@font/dubai_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ThemeOverlay.App.TabLayout" parent="">
        <item name="colorPrimary">@color/purple_700</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/purple_700</item>
    </style>

    <style name="Theme.AlFahidiHistoricalWayfinding.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

    </style>

    <style name="Theme.AlFahidiHistoricalWayfinding.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">

    </style>

    <style name="Theme.AlFahidiHistoricalWayfinding.ActionMode" parent="Widget.MaterialComponents.ActionBar.Primary">
        <item name="android:actionModeBackground">@color/colorYellow</item>
    </style>

</resources>